<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-outline" version="0.0.0">
  <name>Outline Cordova Plugin</name>
  <description>Native plugin for the Outline app</description>
  <license>Apache 2.0</license>
  <engines>
    <engine name="cordova-ios" version=">=4.0.0-dev" />
    <engine name="cordova-osx" version=">=4.0.0-dev" />
  </engines>

  <!-- iOS/macOS -->
  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="OutlinePlugin">
        <param name="ios-package" value="OutlinePlugin" />
        <param name="onload" value="true" />
      </feature>
    </config-file>

    <source-file src="apple/src/OutlinePlugin.swift" />
    <header-file src="apple/src/macos/Outline-Bridging-Header.h" />
  </platform>
  
  <!-- macOS -->
  <platform name="osx">
    <config-file target="config.xml" parent="/*">
      <feature name="OutlinePlugin">
        <param name="ios-package" value="OutlinePlugin" />
        <param name="onload" value="true" />
      </feature>
    </config-file>

    <source-file src="apple/src/OutlinePlugin.swift" />
    <header-file src="apple/src/macos/Outline-Bridging-Header.h" />
  </platform>
</plugin>